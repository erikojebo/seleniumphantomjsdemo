        <input type="text" name="firstName" placeholder="First name" ng-model="customer.firstName" />
        <input type="text" name="lastName" placeholder="Last name" ng-model="customer.lastName" />
        <input type="text" name="email" placeholder="Email" ng-model="customer.email" />
        
        <input type="submit" value="Add" />
    </fieldset>
</form>

